{
  "name": "pdoom1-website",
  "private": true,
  "version": "0.2.1",
  "scripts": {
    "start": "python -m http.server -d public 5173",
    "test:bug": "node api/test-report-bug.js",
    "test:health": "python scripts/health-check.py",
    "test:deploy": "python scripts/verify-deployment.py",
    "test:all": "python scripts/health-check.py && python scripts/verify-deployment.py",
    "test:integration": "python scripts/export-leaderboard-bridge.py --validate",
    "generate:issues": "node scripts/generate_pdoom1_issues_md.js",
    "generate:roadmap": "node scripts/generate_roadmap_from_milestones.js",
    "update:version": "python scripts/update-version-info.py",
    "update:stats": "python scripts/calculate-game-stats.py",
    "sync:all": "python scripts/update-version-info.py && python scripts/calculate-game-stats.py",
    "export:leaderboard": "python scripts/export-leaderboard-bridge.py --refresh",
    "api:server": "python scripts/api-server.py --find-port",
    "api:test": "python scripts/api-server.py --test",
    "game:setup": "python scripts/game-integration.py --setup",
    "game:export": "python scripts/game-integration.py --export",
    "game:status": "python scripts/game-integration.py --status",
    "game:sync-all": "python scripts/game-integration.py --sync-leaderboards",
    "game:weekly-sync": "python scripts/game-integration.py --weekly-sync",
    "league:status": "python scripts/weekly-league-manager.py --status",
    "league:new-week": "python scripts/weekly-league-manager.py --new-week",
    "league:archive": "python scripts/weekly-league-manager.py --archive-week",
    "league:standings": "python scripts/weekly-league-manager.py --standings",
    "league:seed": "python scripts/weekly-league-manager.py --generate-seed",
    "integration:test": "python scripts/test-integration.py --quick",
    "deploy:verify": "python scripts/verify-deployment.py && echo 'Deployment verification passed!'",
    "deploy:prepare": "npm run sync:all && npm run test:all && echo 'Ready for deployment!'",
    "deploy:prep-weekly": "python scripts/prepare-weekly-deployment.py",
    "deploy:check": "python scripts/prepare-weekly-deployment.py --check-only",
    "deploy:quick-check": "python scripts/prepare-weekly-deployment.py --quick"
  }
}
